service cloud.firestore {
  match /databases/{database}/documents {
        match /users/{uid}/rules/{rule} {
            allow read: if request.auth.uid == uid;
        }

        match /users/{uid}/filters/filter {
            allow read: if request.auth.uid == uid;
        }
        
        match /users/{uid}/options/global {
        		allow read: if request.auth.uid == uid;
        }
  }
}