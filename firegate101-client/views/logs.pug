doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title Logs
    link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet', href='https://code.getmdl.io/1.3.0/material.cyan-light_blue.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    link(rel='stylesheet', href='/styles/logs-base.css')
    script(defer='', src='https://code.getmdl.io/1.3.0/material.min.js')

  body
    .layout.mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer.mdl-layout--fixed-header
      header.header.mdl-layout__header.mdl-color--grey-100.mdl-color-text--grey-600
        .mdl-layout__header-row
          span.mdl-layout-title Logs
          .mdl-layout-spacer
      .drawer.mdl-layout__drawer.mdl-color--blue-grey-900.mdl-color-text--blue-grey-50
        header.drawer-header
        nav.navigation.mdl-navigation.mdl-color--blue-grey-800
          a#mdl-navigation__link--rules.mdl-navigation__link.mdl-navigation__link--rules
            i.mdl-color-text--blue-grey-400.material-icons(role='presentation') flag
            | Logs
            <div class="mdl-layout-spacer"></div>
            <a id="mdl-navigation__link--help" class="mdl-navigation__link mdl-navigation__link--help"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">help_outline</i><span class="visuallyhidden">Help</span></a>
      main.mdl-layout__content.mdl-color--grey-100
        .page-content
          .card-wide.mdl-card.mdl-shadow--2dp
            .form-holder

            .mdl-card__actions.mdl-card--border
              button#rule-button--update.rule-button--update.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect(tabindex='11')
                i.material-icons edit
                |  Update
          .mdl-snackbar.mdl-js-snackbar(aria-live='assertive', aria-atomic='true', aria-relevant='text')
            .mdl-snackbar__text
            button.mdl-snackbar__action(type='button')
    script(src='/scripts/logs.js')
