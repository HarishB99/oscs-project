doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, minimum-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title Logs
    link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet', href='https://code.getmdl.io/1.3.0/material.cyan-light_blue.min.css')
    link(rel='stylesheet', href='/styles/logs-base.css')
    script(defer='', src='https://code.getmdl.io/1.3.0/material.min.js')
    script
      | var logs = !{logs}

  body
    .layout.mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer.mdl-layout--fixed-header
      header.header.mdl-layout__header.mdl-color--grey-100.mdl-color-text--grey-600
        .mdl-layout__header-row
          span.mdl-layout-title Logs
          .mdl-layout-spacer
      .drawer.mdl-layout__drawer.mdl-color--blue-grey-900.mdl-color-text--blue-grey-50
        header.drawer-header
        nav.navigation.mdl-navigation.mdl-color--blue-grey-800
          a#mdl-navigation__link--rules.mdl-navigation__link.mdl-navigation__link--rules
            i.mdl-color-text--blue-grey-400.material-icons(role='presentation') flag
            | Logs
      main.mdl-layout__content.mdl-color--grey-100
        div
          //LOG CONTAINER IS HERE
          div.mdl-tabs.mdl-js-tabs
            div.mdl-tabs__tab-bar
              a.mdl-tabs__tab.is-active(data-toggle="tab" href="#visited-domains") Visited Domains
              a.mdl-tabs__tab(data-toggle="tab" href="#security-events") Security Events
              a.mdl-tabs__tab(data-toggle="tab" href="#timeline") Timeline
            
            div#visited-domains.mdl-tabs__panel.is-active
              div#visited-domains-container                
            div#security-events.mdl-tabs__panel
              div#security-events-tab.mdl-tabs.mdl-js-tabs
                div#security-events-tab-hosts.mdl-tabs__tab-bar
            div#timeline.mdl-tabs__panel
            
    script(src='/scripts/logs.js')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js")
