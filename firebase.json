{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**",
        "function": "web_app"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/private/**",
      "**/licenses/**",
      "**/*.json",
      "**/LICENSE",
      "**/*.map",
      "firestore-schema.json",
      "firestore-sample-rules"
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"%RESOURCE_DIR%\" run lint"
    ],
    "source": "functions"
  }
}
