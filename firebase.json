{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/favicon.ico",
        "destination": "/images/favicon.ico"
      },
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/index",
        "destination": "/index.html"
      },
      {
        "source": "/home",
        "destination": "/index.html"
      },
      {
        "source": "/error",
        "destination": "/404.html"
      },
      {
        "source": "/firewall",
        "destination": "/index.html"
      },
      {
        "source": "/create_rule",
        "destination": "/contents/rules/rule.html"
      },
      {
        "source": "/create_account",
        "destination": "/contents/accounts/account.html"
      },
      {
        "source": "/login",
        "destination": "/contents/accounts/login.html"
      },
      {
        "source": "/reset_email",
        "destination": "/contents/accounts/reset_email.html"
      },
      {
        "source": "/reset_password",
        "destination": "/contents/accounts/reset_password.html"
      },
      {
        "source": "/profile",
        "destination": "/contents/accounts/profile.html"
      },
      {
        "source": "**",
        "function": "web_app"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/private/**",
      "**/licenses/**",
      "**/*.json",
      "**/LICENSE",
      "**/*.map",
      "**/*.config.*",
      "**/src/**",
      "**/package*.json",
      "**/.babelrc",
      "**/*.bac"
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"%RESOURCE_DIR%\" run lint",
      "npm --prefix \"%RESOURCE_DIR%\" run build"
    ],
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
